<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
	android:focusable="true"
  >



	<RelativeLayout
		android:padding="15dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#3F51B5"
		>


		<TextView
			android:layout_alignParentRight="true"
			android:id="@+id/tui_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#F0F0F0"
			android:text="@string/tuichu"
			android:textSize="18sp"
			/>

		<TextView
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#F0F0F0"
			android:text="@string/app_name"
			android:textSize="18sp"
			/>

	</RelativeLayout>


	<LinearLayout
		android:gravity="center"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:padding="5dp"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:text="wifi账号:"
			android:textSize="14sp"/>

		<Spinner
			android:id = "@+id/Spinner_city"
			android:layout_width = "wrap_content"
			android:layout_height ="wrap_content" />

		<TextView
			android:padding="5dp"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:text="  密码:xjkb8888"
			android:textSize="14sp"
			/>

		<Button
			android:layout_marginRight="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:id="@+id/button_login"
			android:focusable="true"
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:text="登录"
			android:textColor="#F0F0F0"
			android:background="#1E90FF"
			/>

	</LinearLayout>



	<RelativeLayout
		android:padding="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/ftp_tv1"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="服务器:  "
			android:textColor="#000000"
			/>
		<EditText
			android:padding="5dp"
			android:layout_toRightOf="@id/ftp_tv1"
			android:id="@+id/txt_host_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="192.168.1.36"
			android:background="@drawable/corners_write5"
			/>

	</RelativeLayout>

	<!--android:text="192.168.1.97"
	android:text="1"
	android:text="1"-->

	<RelativeLayout
		android:padding="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ftp_tv2"
			android:textColor="#000000"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="用户名:  "
			/>
		<EditText
			android:padding="5dp"
			android:layout_toRightOf="@id/ftp_tv2"
			android:background="@drawable/corners_write5"
			android:id="@+id/txt_user_name"
			android:text="kubao"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"

			/>
	</RelativeLayout>


	<RelativeLayout
		android:padding="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ftp_tv3"
			android:textColor="#000000"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="密    码:  "
			/>
		<EditText
			android:padding="5dp"
			android:layout_toRightOf="@id/ftp_tv3"
			android:background="@drawable/corners_write5"
			android:id="@+id/txt_password"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="kubao"
			/>
	</RelativeLayout>





<LinearLayout
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:paddingLeft="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:text="FTP账号:"/>

	<GridView
		android:id="@+id/index_lv"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:numColumns="2"/>
</LinearLayout>


</LinearLayout>
